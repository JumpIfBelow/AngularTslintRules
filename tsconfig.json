{
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es6", "es2017"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "./dist",
    "removeComments": true,
    "target": "es5",
    "typeRoots": ["./node_modules", "./node_modules/@types"],
    "types": ["chai", "mocha", "node", "sprintf-js"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
